{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitReturns": false,
        "removeComments": true,
        "strictNullChecks": false,
        "strict": true,
        "outDir": "dist",
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/webpack.*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}